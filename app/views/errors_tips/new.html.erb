<section class="banner banner-work">
	<div class="container">
    	<p>bon plans</p>
    </div>
</section>
<div class="work_list">
    <div class="container" style>
      <div>
        <%= form_tag({:action => 'create'}, {:method => :post}) do |f| %>
        <section style="background-color: #EBEBEB;" class="col-md-12">
            <h1>Signaler une erreur sur le bon plan : <span style="color:#999999;">Lorem Ipsum</span></h1>
            <div class="row"><br>
                <div class="col-md-5">
                    <div class="form-group">
                        <%= text_field_tag 'name_contact', nil, class: 'form-control', placeholder: 'Votre nom', :value => @name_contact %>
                        <!-- <input type="text" class="form-control noraduis" id="usr" placeholder="Nom "> -->
                    </div>
                    <div class="form-group">
                        <%= email_field_tag 'email_contact', nil, class: 'form-control',placeholder:"Votre adresse email", :value => @email_contact %>
                        <!-- <input type="email" class="form-control noraduis" id="pwd" placeholder="adresse mail *"> -->
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-7">
                    <div class="form-group">
                        <%= text_area_tag 'message_contact', nil, class: 'form-control',placeholder:"Votre message ici",rows: 3, :value => @message_contact %>
                        <!<textarea class="form-control" rows="5" id="comment noraduis" placeholder="Érreur remarquées... *"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                    <button type="button" class="btn btn-danger"><span class="custom-btn">Valider</span></button>
              </div>
            </div>
          <div class="row">
            <div class="col-md-5">
             <div style="margin-bottom: 15px;">* Veuillez renseigner le champs</div>
            </div>
          </div>
        </section>
            <% end %>
      </div>
    </div>
</div>