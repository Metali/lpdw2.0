<section class="banner banner-blue banner-team">
  <div class="container">
    <p>Annuaire des anciens</p>
  </div>
</section>
<div class="student-profile">
  <%= form_tag({:action => 'update_user'}, {:id => :user_id}) do |f| %>
      <div class="container">
        <div class="row">
          <div class="student-infos">
            <img src="/assets/1.jpg" class="col-md-3 block">
            <div class="col-md-offset-1 col-md-8">
              <div class="row block">
                <h1 class="col-md-10"><%= @student.lastname %>  <%= @student.name %></h1>
                <% promo = (!@student.users_info.graduation_year.present?||@student.users_info.graduation_year == 0 ? 'Année en cours' : @student.users_info.graduation_year) %>
                <p class="col-md-2">Promo: <%= promo %></p>

                <p class="birthday col-md-12">Age: <%= @student.calcAge %></p>
              </div>
              <div class="row social">
                <ul class="nav nav-tabs" role="tablist">
                  <li role="presentation" class="active cv"><a href="#cv" aria-controls="cv" role="tab" data-toggle="tab">CV</a></li>
                  <% if @student.twitter.present? %>
                      <li role="presentation"><a href="#twitter" aria-controls="twitter" role="tab" data-toggle="tab"><i class="fa fa-twitter fa-2x"></i></a></li>
                  <% end %>
                  <% if @student.googleplus.present? %>
                      <li role="presentation"><a href="#googleplus" aria-controls="googleplus" role="tab" data-toggle="tab"><i class="fa fa-google-plus fa-2x"></i></a></li>

                  <% end %>
                  <% if @student.linkin.present? %>
                      <li role="presentation"><a href="#linkin" aria-controls="linkin" role="tab" data-toggle="tab"><i class="fa fa-linkedin fa-2x"></i></a></li>

                  <% end %>
                  <% if @student.email.present? %>
                      <li role="presentation"><a href="#email" aria-controls="email" role="tab" data-toggle="tab"><i class="fa fa-envelope fa-2x"></i></a></li>
                  <% end %>

                </ul>
                <div class="tab-content">
                  <div role="tabpanel" class="tab-pane active" id="cv"><%= text_field_tag 'student_cv', nil, class:"col-md-10", placeholder: 'Lien CV', :value => @student_cv %></div>
                  <div role="tabpanel" class="tab-pane" id="twitter"><%= text_field_tag 'student_twitter', nil, class:"col-md-10", placeholder: (@student.twitter.present? ? @student.twitter : 'Lien Twitter'), :value => @student.twitter %></div>
                  <div role="tabpanel" class="tab-pane" id="googleplus"><%= text_field_tag 'student_googleplus', nil, class:"col-md-10", placeholder: (@student.googleplus.present? ? @student.googleplus : 'Lien Google Plus'), :value => @student.googleplus %></div>
                  <div role="tabpanel" class="tab-pane" id="linkin"><%= text_field_tag 'student_linkin', nil, class:"col-md-10", placeholder: (@student.linkin.present? ? @student.linkin : 'Lien LinkedIn'), :value => @student.linkin %></div>
                  <div role="tabpanel" class="tab-pane" id="email"><%= text_field_tag 'student_email', nil, class:"col-md-10", placeholder: (@student.email.present? ? @student.email : 'Lien Google Plus'), :value => @student.email %></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="block row">
          <div class="student-jobs">
            <div class="current-job">
              <div class="row">
                <p class="col-md-2">Poste Actuel :</p><%= text_field_tag 'student_current_title', nil, placeholder: (@student.users_info.current_job_title.present? ? @student.users_info.current_job_title : 'Poste actuel'), :value => @student.users_info.current_job_title %></li>
                <div class="salary col-md-12">
                  <p class="col-md-2">Salaire:</p>
                  <%= select_tag(:student_current_salary, options_for_select([['10 - 15 K', 1], ['15 - 20 K', 2], ['20 - 25 K', 3], ['20 - 25 K', 4], ['25 - 30 K', 5], ['30 - 35 K', 6], ['35 - 40 K', 7]])) %>
                </div>
              </div>
              <div class="row">
                <p class="col-md-2">Description :</p><%= text_field_tag 'student_current_job_desc', nil, class: 'col-md-9',placeholder: (@student.users_info.current_job_desc.present? ? @student.users_info.current_job_desc : 'Décrivez votre poste actuel'),rows: 3, :value => @student.users_info.current_job_desc %>
              </div>
            </div>

            <div class="lp-job">
              <div class="row">
                <p class="col-md-2">Poste en Licence Pro:</p><%= text_field_tag 'student_lp_title', nil, placeholder: (@student.users_info.lp_job_title.present? ? @student.users_info.lp_job_title : 'Poste occupé durant la LP'), :value => @student.users_info.lp_job_title %></li>
                <div class="salary col-md-12">
                  <p class="col-md-2">Salaire:</p>
                  <%= select_tag(:student_current_salary, options_for_select([['10 - 15 K', 1], ['15 - 20 K', 2], ['20 - 25 K', 3], ['20 - 25 K', 4], ['25 - 30 K', 5], ['30 - 35 K', 6], ['35 - 40 K', 7]])) %>
                </div>
              </div>
              <div class="row">
                <p class="col-md-2">Description :</p><%= text_field_tag 'student_lp_desc', nil, class: 'col-md-9',placeholder: (@student.users_info.lp_job_desc.present? ? @student.users_info.lp_job_desc : 'Décrivez le poste occupé durant le LP'),rows: 3, :value => @student.users_info.lp_job_desc %>
              </div>
            </div>
          </div>
        </div>
        <%= submit_tag("Enregistrer") %>

      </div>
  <% end %>
</div>