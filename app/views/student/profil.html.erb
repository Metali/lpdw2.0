<section class="banner banner-blue banner-team">
  <div class="container">
    <p>Annuaire des anciens</p>
  </div>
</section>
<div class="student-profile">
  <div class="container">

    <div class="row">
      <div class="student-infos">
        <img src="/assets/1.jpg" class="col-md-3 block">
        <div class="col-md-offset-1 col-md-8">
          <div class="row block">
            <h1 class="col-md-10"><%= @student.lastname %>  <%= @student.name %></h1>
            <p class="col-md-2">Promo: <%= @student.users_info.graduation_year %></p>
            <p class="birthday col-md-12">Age: <%= @student.calcAge %></p>
          </div>
          <div class="row social">
            <ul>
              <% if @student.users_info.cv.present? %>
                  <li class="cv"><a target="_blank" href=<%= @student.users_info.cv%>>CV</a></li>
              <% end %>
              <% if @student.twitter.present? %>
                  <li><a target="_blank" href=<%= @student.twitter%>><i class="fa fa-twitter fa-2x"></i></a></li>
              <% end %>
              <% if @student.googleplus.present? %>
                  <li><a target="_blank" href=<%= @student.googleplus%>><i class="fa fa-google-plus fa-2x"></i></a></li>
              <% end %>
              <% if @student.linkin.present? %>
                  <li><a target="_blank" href=<%= @student.linkin%>><i class="fa fa-linkedin fa-2x"></i></a></li>
              <% end %>
              <% if @student.email.present? %>
                  <li><a data-toggle="modal" data-target="#contact_modal" href="#contact_modal"><i class="fa fa-envelope fa-2x"></i></a></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="block row">
      <div class="student-jobs">
        <div class="current-job">
            <div class="row">
                <p class="col-md-2">Poste Actuel :</p> <h2 class="col-md-offset-1 col-md-9"><%= @student.users_info.current_job_title %></h2>
                <% current_salary = (@student.users_info.current_average_salary.present? ? @student.users_info.current_average_salary+' €' : '') %>
                <div class="salary col-md-12"><p class="col-md-2">Salaire:</p> <p class="col-md-offset-1 col-md-9"><%= current_salary %></p></div>
            </div>
            <div class="row">
                <p class="col-md-2">Description :</p> <p class="col-md-offset-1 col-md-9"><%= @student.users_info.current_job_desc %></p>
            </div>
        </div>

        <div class="lp-job">
            <div class="row">
                <p class="col-md-2">Poste en Licence Pro:</p> <h2 class="col-md-offset-1 col-md-9"><%= @student.users_info.lp_job_title %></h2>
                <% lp_salary = (@student.users_info.lp_average_salary.present? ? @student.users_info.lp_average_salary+' €' : '') %>
                <div class="salary col-md-12"><p class="col-md-2">Salaire:</p> <p class="col-md-offset-1 col-md-9"><%= lp_salary %></p></div>
            </div>
            <div class="row">
                <p class="col-md-2">Description :</p> <p class="col-md-offset-1 col-md-9"><%= @student.users_info.lp_job_desc %></p>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="modal fade" id="contact_modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        CONTACT
      </div>
    </div>
  </div>