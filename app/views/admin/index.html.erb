    <thead>
    <tr>
        <th>ID</th>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Date de dépot</th>
        <th>Options</th>

    </tr>
    </thead>
    <tbody>
    <% @applicants.each do |applicant|
        if applicant.applicant_status != nil
            @status = applicant.applicant_status
                if @status.applicant_response == 1%>
