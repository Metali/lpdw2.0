<%= form_for(:user, html: {class: "form" }) do |f| %>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true , :class => 'input' ,:placeholder=>"Email" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :name, autofocus: true , :class => 'input' ,:placeholder=>"PrÃ©nom" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :lastname, autofocus: true , :class => 'input' ,:placeholder=>"Nom" %>
  </div>
</div>
<div class="form-group">
  <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
  <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "off", :class => 'input' ,:placeholder=>"Mot de passe" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'input' ,:placeholder=>"Confirmer le mot de passe" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize  %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.submit "Creer utilisateur", :class => 'input-btn' %>
  </div>
</div>
<% end %>