<h2>Modifier l'utilisateur</h2>

<%= form_for(:user, html: {class: "form" }) do |f| %>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true , :class => 'input' ,:placeholder=>"Email" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :name, autofocus: true , :class => 'input' ,:placeholder=>"Name" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :lastname, autofocus: true , :class => 'input' ,:placeholder=>"Last name" %>
  </div>
</div>
<div class="form-group">
  <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
  <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "off", :class => 'input' ,:placeholder=>"Password" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'input' ,:placeholder=>"Password confirmation" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :description, :class => 'input' ,:placeholder=>"Poste de l'utilisateur" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :twitter, :class => 'input' ,:placeholder=>"lien réseau social twitter" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :linkin, :class => 'input' ,:placeholder=>"lien réseau social linkedin" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :photo, :class => 'input' ,:placeholder=>"Lien vers votre photo" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize  %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.submit "Mise à jour", :class => 'input-btn' %>
  </div>
</div>
<% end %>