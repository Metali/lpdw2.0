<section class="banner banner-red">
    <div class="container">
        <p>Annuaire d'entreprises</p>
    </div>
</section>

<!-- LISTE ENTREPRISES -->
<div class="gray-bg wrapper">
    <div class="container">

      <div class="row">
        <section class="col-md-10 col-md-offset-1 home-news">
          <h1>Entreprises</h1>
          
          <div class="row">
            <% @companies.each_with_index do |company, i| %>

              <% if i%3===2  %>
                <article class="col-md-12">
              <% else %>
                <article class="col-md-6">
              <% end %>

                <div class="article-new">
                  <h3><%= company.name %></h3>
            
                    <div class="article-excerpt"><%= HTML_Truncator.truncate((company.description),40).html_safe %></div>
                      <%= link_to(company,:class=>'button') do %>
                      <span>Voir</span> <i class="fa fa-chevron-right"></i>
                    <% end %>
                  </div>
                </article>
              <% end %>
            </div>
         </section>
       </div>

<ul class="pagination pull-right">
  <% if @page > 1 %>
  <li>
  <%= link_to '<', companies_path(@page - 1) %>
  </li>
  <li><%= link_to @page - 1, companies_path(@page - 1) %></li>
  <% end %>

  <li class="active"><a href="#"><%= @page %></a></li>

  <% if(@hasNext) %>
    <li><%= link_to @page + 1, companies_path(@page + 1) %></li>
    <li>
      <%= link_to '>', companies_path(@page + 1) %>
    </li>
  <% end %>
</ul>

    </div>
</div>

