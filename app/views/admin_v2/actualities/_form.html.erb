<%= form_for([:admin_v2, @actuality]) do |f| %>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :title, autofocus: true , :class => 'input' ,:placeholder=>"Titre" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
 
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.submit "Valider", :class => 'input-btn' %>
  </div>
</div>
<% end %>