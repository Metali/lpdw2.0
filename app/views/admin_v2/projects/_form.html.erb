<h2>Ajouter un projet</h2>
<%= form_for([:admin_v2, @project]) do |f| %>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.text_field :name, autofocus: true , :class => 'input' ,:placeholder=>"Titre" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.text_area :description, :class => "tinymce", :rows => 40, :cols => 120 %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.text_field :link ,:class => 'input' ,:placeholder=>"Lien du site du projet"  %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-3">
        <p class="desc-input">Choisir une photo pour le projet:</p>
      </div>
      <div class="col-sm-7">
        <%= f.file_field :thumbmail ,:class => 'input' ,:placeholder=>"Lien de la photo du projet"%>
      </div>
    </div>
