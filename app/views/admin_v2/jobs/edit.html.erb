<h2>Modifier une offre</h2>
<%= form_for([:admin_v2, @job]) do |f| %>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :job_name, autofocus: true , :class => 'input' ,:placeholder=>"Nom" %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :job_number, autofocus: true , :class => 'input' ,:placeholder=>"Numéro l'offre" %>
 </div>
</div>

</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_area :job_description, :class => "tinymce", :rows => 40, :cols => 120, :placeholder=>"Description" %>
 </div>
</div>

<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :start_at, autofocus: true , :class => 'input' ,:placeholder=>"Début de l'offre" %>
 </div>
</div>

<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :duration,:class => 'input' ,:placeholder=>"Durée de l'offre"  %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :profil,:class => 'input' ,:placeholder=>"Profil recommandé"  %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :skills,:class => 'input' ,:placeholder=>"Compétences"  %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :contact ,:class => 'input' ,:placeholder=>"Contact"  %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :location,:class => 'input' ,:placeholder=>"Lieu"  %>
 </div>
</div>

<div class="form-group">
  <div class="col-sm-10">
    <select class="form-control" name="company_id">
    <option value="0">N/A</option>
    <% @companies.each do |company| %>
      <option value="<%=company.id %>"
    	  <%= 
          @selected = ""
	  if @job.company and @job.company.id == company.id
  	    @selected = "selected"
	  end
	  @selected %>
      ><%= company.name %></option>
    <% end %>
    </select>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-10">
    <div class="checkbox">
      <label>
       <%= f.check_box :status  %> Activer
      </label>
    </div>
  </div>
</div>

<div class="form-group">
 <div class="col-sm-10">
   <%= f.submit "Modifier une offre", :id => 'modif_job', :class => 'input-btn' %>
 </div>
</div>
<% end %>

