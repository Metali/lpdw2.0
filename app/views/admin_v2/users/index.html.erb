<% provide :title_admin, 'Utilisateurs' %>
<h1>Gérer les comptes utilisateurs</h1>
<%= link_to(new_admin_v2_user_path,:class=>'button button-blue float-right') do %>
    <span>Créer un utilisateur</span> <i class="fa fa-user"></i>
<% end %>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Rôle</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td data-th="ID"><%= user.id %></td>
            <td data-th="Email"><%= user.email %></td>
            <td data-th="Prénom"><%= user.name ? user.name : '-- Aucun --' %></td>
            <td data-th="Nom"><%= user.lastname ? user.lastname : '-- Aucun --' %></td>
            <td data-th="Rôle"><%= user.display_role %></td>
            <td data-th="Action">
                <%= link_to(edit_admin_v2_user_path(user), class: 'button button-blue') do %>
                <i class="fa fa-pencil"></i> Modifier
                <% end %>
                <%= link_to(admin_v2_user_path(user), method: :delete, data: {confirm: "Etes vous sûr de vouloir supprimer cet utilisateur"}, class: 'button button-red user-delete') do %>
                <i class="fa fa-trash-o white"></i> Supprimer
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>