<%= form_for([:admin_v2, @user], html: {class: "form" }) do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true , :class => 'input' ,:placeholder=>"Adresse email" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'input' ,:placeholder=>"PrÃ©nom" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :lastname, :class => 'input' ,:placeholder=>"Nom" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off", :class => 'input' ,:placeholder=>"Mot de passe" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'input' ,:placeholder=>"Confirmation mot de passe" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :description, :class => 'input' ,:placeholder=>"Description" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :twitter, :class => 'input' ,:placeholder=>"Compte twitter" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :linkin, :class => 'input' ,:placeholder=>"Compte LinkedIn" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :photo, :class => 'input' ,:placeholder=>"Lien photo" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.collection_select :role, User::ROLES, :to_s, :humanize  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Valider", :class => 'input-btn' %>
    </div>
  </div>
<% end %>