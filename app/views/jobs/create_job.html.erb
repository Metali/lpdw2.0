<h2>Ajouter une offre</h2>
<%= form_for(@job, url:  admin_create_job_path, html: {class: "form" }) do |f| %>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :job_name, autofocus: true , :class => 'input' ,:placeholder=>"Nom" %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :job_number, autofocus: true , :class => 'input' ,:placeholder=>"Numéro l'offre" %>
 </div>
</div>

</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_area :job_description, :class => "tinymce", :rows => 40, :cols => 120, :placeholder=>"Description" %>
 </div>
</div>

<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :start_at, autofocus: true , :class => 'input' ,:placeholder=>"Début de l'offre" %>
 </div>
</div>

<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :duration,:class => 'input' ,:placeholder=>"Durée de l'offre"  %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :profil,:class => 'input' ,:placeholder=>"Profil recommandé"  %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :skills,:class => 'input' ,:placeholder=>"Compétences"  %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :contact ,:class => 'input' ,:placeholder=>"Contact"  %>
 </div>
</div>
<div class="form-group">
 <div class="col-sm-10">
   <%= f.text_field :location,:class => 'input' ,:placeholder=>"Lieu"  %>
 </div>
</div>

<div class="form-group">
 <div class="col-sm-10">
   <%= f.submit "Créer une offre", :class => 'input-btn' %>
 </div>
</div>
<% end %>

