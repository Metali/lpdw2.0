<section class="banner banner-red">
	<div class="container">
		<p>Annuaire d'entreprises</p>
	</div>
</section>

<!-- LISTE OFFRES -->
<div class="gray-bg wrapper">
	<div class="container">
		<div class="row">

			<%= link_to(annuary_path,:class=>'more-article') do %>
				<i class="fa fa-chevron-left"></i><span>Revenir Ã  l'accueil annuaire</span>
			<% end %>

			<section class="col-md-10 col-md-offset-1 home-news">
				<h1>Offres d'emploi</h1>

				<div class="row">
					<% @jobs.each_with_index do |job, i| %>

						<% if i % 3 === 2 %>
							<article class="col-md-12">
							<% word = 40 %>
						<% else %>
							<article class="col-md-6">
							<% word = 15 %>
						<% end %>

							<div class="article-new">
								<h3><%= job.job_name %></h3>

								<div class="article-excerpt">
									<%= HTML_Truncator.truncate((job.job_description), word).html_safe %>
								</div>

								<%= link_to(job,:class=>'button') do %>
									Voir <i class="fa fa-chevron-right"></i>
								<% end %>
							</div>

						</article>
					<% end %>
				</div>

			</section>
		</div>

		<ul class="pagination pull-right">
			<% if @pageCurrent > 1 %>
				<li>
					<%= link_to '<', jobs_path(@pageCurrent - 1) %>
				</li>
			<% end %>

			<% 1.upto(@pageMax) do |i| %>
				<li <% if i == @pageCurrent %>class="active"<% end %>>
					<%= link_to(i, jobs_path(i)) %>
				</li>
			<% end %>

			<% if @pageCurrent < @pageMax %>
				<li>
					<%= link_to '>', jobs_path(@pageCurrent + 1) %>
				</li>
			<% end %>
		</ul>

	</div>
</div>

