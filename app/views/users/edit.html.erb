<section class="banner banner-blue banner-postuler">
  <div class="container">
      <p>Edition profil</p>
    </div>
</section>
<div class="container first_apply edit-profil">
  <% if flash[:error] %>
    <div class="alert alert-orange"><%= flash[:error] %></div>
  <% elsif flash[:success] %>
    <div class="alert alert-green"><%= flash[:success] %></div>
  <% end %>

  <div class="form_wrapper hidden-xs">
    <ul class="apply_steps row">
      <li class="apply_step step_1 active" data-step="1">Editer mon profil</li>
    </ul>
    <div class="step step1">
      <%= form_for @user, :html => {:class => 'hidden-xs apply-form', 'data-parsley-validate' => '', :id =>"apply-step1"} do |f| %>
        <fieldset class="row">
          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-6 input_wrapper">
                <%= f.text_field :name, 'placeholder' => "Prenom", "maxlength" => "60", "required"=> ''%>
              </div>
              <div class="col-sm-6 input_wrapper">
                <%= f.text_field :lastname, 'placeholder' => "Nom", "maxlength" => "60", "required"=> ''%>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-6 input_wrapper">
                <%= f.text_field :twitter, 'placeholder' => "Twitter" %>
              </div>
              <div class="col-sm-6 input_wrapper">
                <%= f.text_field :linkin, 'placeholder' => "Linkedin"%>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-6 input_wrapper">
                <%= f.text_field :photo, 'placeholder' => "Photo" %>
              </div>
            </div>
          </div>
        </fieldset>
        <br>
        <%= f.submit 'Modifier mon profil', :class => 'next button submit gotoend save_entry' %>
      <% end %>
    </div>

<div class="step step1">
      <%= form_for @user, :html => {:class => 'hidden-xs apply-form', 'data-parsley-validate' => '', :id =>"apply-step1"} do |f| %>
        <fieldset class="row">
          <span class="col-sm-12 input_wrapper">Mot de passe (8 caract√®res minimum)</span>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-6 input_wrapper">
                <%= f.password_field :password, 'placeholder' => "Mot de passe", "maxlength" => "60", "required"=> 'required'%>
              </div>
              <div class="col-sm-6 input_wrapper">
                <%= f.password_field :password_confirmation, 'placeholder' => "Mot de confirmation", "maxlength" => "60", "required"=> 'required'%>
              </div>
            </div>
          </div>
        </fieldset>
        <br>
        <%= f.submit 'Modifier mon mot de passe', :class => 'next button submit gotoend save_entry' %>
      <% end %>
    </div>

  </div>
</div>
