<div class="admin-panel">
<h2>Inscription</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
        <i class="fa fa-user"></i>
        <%= f.email_field :email, autofocus: true , :class=>"admin-input-email",:placeholder=>"Adresse email"%>
    </div>
    <div class="form-group">
        <i class="fa fa-lock"></i>
        <%= f.password_field :password, autocomplete: "off", :class=>"admin-input-password",:placeholder=>"Mot de passe" %>
    </div>
    <div class="form-group">
        <i class="fa fa-lock"></i>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"admin-input-password",:placeholder=>"Confirmer le mot de passe" %>
    </div>
    <div class="form-group">
        <%= f.submit "Valider", :class=>"admin-input-submit" %>
    </div>
    <% end %>
</div>