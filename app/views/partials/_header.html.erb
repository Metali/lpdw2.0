<% @alerts.each do |alert| %>
<% if alert.active %>
        <div class="flash">
            <div class="alert <%= alert.level %>" >
            <%= alert.content %>
            <button class="close-alert">
            <span class="glyphicon glyphicon-remove"></span>
            </button>
            </div>
        </div>
<% end %>
